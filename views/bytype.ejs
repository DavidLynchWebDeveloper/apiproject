<%- include("partials/header.ejs") %>
<div id="wrapper">
    <div class="row">
            <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
                     
                <div class="containerbox1">
                  <h2>Search By Type</h2>
                  <h3>David Lynch -Web Developer</h3>

                  <ul>
                      <li>micro - Most craft breweries.</li>
                      <li>nano - Very small brewery. Local.</li>
                      <li>regional - Large regional brewery.</li>
                      <li>brewpub - Restaurant/bar with brewery.</li>
                      <li>large - A very large brewery. Miller</li>
                      <li>planning - A brewery in planning stage.</li>
                      <li>bar - A bar. No brewery equipment onsite.</li>
                      <li>contract - Uses another breweryâ€™s equipment.</li>
                      <li>proprietor - Similar to contract. </li>
                      <li>closed - A location which has been closed.</li>
                </ul>

                <div class="formcontainer">
                  <form action="/bytype" method="POST">
                  
                  <div class="row">
                    <div class="col-25">
                      <label for="country">Select Type</label>
                    </div>
                    <div class="col-75">
                      <select id="type" name="type">
                        <option value="nano">Nano</option>
                        <option value="regional">Regional</option>
                        <option value="brewpub">Brew Pub</option>
                        <option value="large">Large</option>
                        <option value="planning">Planning</option>
                        <option value="bar">Bar</option>
                        <option value="contract">Contract</option>
                        <option value="proprietor">Proprietor</option>
                        <option value="closed">Closed</option>
                      </select>
                    </div>
                  </div>
                  
                  <div class="row">
                    <div class="col-25">
                      <label for="qty">Quantity</label>
                    </div>
                    <div class="col-75">
                      <input type="text" id="qty" name="qty" required>
                    </div>
                  </div>

                    <div class="row">
                      	<input type="submit" value="Submit">
                    </div>   
                  </form>
                </div>

                </div>
            </div>
    
            <div class="col-sm-12 col-md-8 col-lg-8 col-xl-8">

              <div class="containerbox2">

                <% let getlen = items.length; %>
                <% let type = items[0][1]; %>
                <% console.log("type is " + type); %>
                <% type = type[0].toUpperCase() + type.slice(1); %>
                <% console.log("getlen is " + getlen); %>

                <h3>Brewery List of Type <%= type %></h3>
                <ol>
                <% for (var i=0;i<getlen;i++) { %>
                  <li><%= items[i][0] %>- 
                    <%= items[i][3] %>,<%= items[i][4] %>

                    <!-- <% if (items[i][6] == null) { %>
                        No Phone record->
                    <% } else { %>
                        Ph: <%= items[i][6] %>->
                    <% } %> -->
                
                    <% if (items[i][7] == null) { %>
                        <span class="http strikethrough">http</span>
                    <% } else { %>
                        <a href=<%= items[i][7] %> target="_blank">http</a>
                    <% } %>

                  </li>
                <% } %>
                </ol>
              </div>
            </div>

    </div> 
</div>
<%- include("partials/footer.ejs") %>
